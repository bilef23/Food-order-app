@model FoodHub.Models.DTO.RestaurantMealDTO
@{
    ViewBag.Title = "showRestaurants";
}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
<link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/custom.css")">
<div class="container">
    <h2 class="m-5">Select a restaurant</h2>
    @foreach (var item in Model.Restaurants)
    {
        <a href="/OrderItem/viewOrderItem/@Model.Meal.Id/@item.Id" style="text-decoration:none">
        <div class="row">
            <div class="col" style="display:flex">
                <img src="@Url.Content(item.ImgUrl)" style="width:200px" />
                <div class="container">
                    <h5>@item.Name</h5>
                    <h5>@item.Review <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-star-fill" viewBox="0 0 16 16">
    <path d="M3.612 15.443c-.386.198-.824-.149-.746-.592l.83-4.73L.173 6.765c-.329-.314-.158-.888.283-.95l4.898-.696L7.538.792c.197-.39.73-.39.927 0l2.184 4.327 4.898.696c.441.062.612.636.282.95l-3.522 3.356.83 4.73c.078.443-.36.79-.746.592L8 13.187l-4.389 2.256z" />
</svg></h5>
                    <h5>@(item.AdditionalPrice+ Model.Meal.BasePrice)denari</h5>
                </div>

            </div>
        </div>
        <hr />
        </a>
       
    }
</div>